<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chip_amarillo"
    android:paddingHorizontal="24dp"
    android:paddingVertical="24dp"
    tools:context=".fragments.ComunicadoFragment">

    <TextView
        android:id="@+id/tv_com_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ReuniÃ³n de padres #00"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_com_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parrafo_test_largo"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_com_titulo" />

    <TextView
        android:id="@+id/tv_com_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="11:00 pm 10/12"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_com_descripcion" />

</androidx.constraintlayout.widget.ConstraintLayout>